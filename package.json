{
  "name": "screwmycode-in--extension",
  "version": "2.0.0",
  "description": "Variable speed pitch control for YouTube (Web Extension for Firefox)",
  "license": "MIT",
  "author": {
    "url": "https://bamdad.fr",
    "name": "Bamdad Sabbagh",
    "email": "hi@bamdad.fr"
  },
  "scripts": {
    "build": "yarn clean && yarn build:webpack && yarn build:ext",
    "build:clean": "rimraf packages",
    "build:ext": "web-ext build --source-dir dist",
    "build:prepare": "./bin/prepare.sh",
    "build:webpack": "NODE_ENV=production webpack",
    "clean": "yarn dev:clean && yarn build:clean",
    "dev": "yarn dev:chrome",
    "dev:clean": "rimraf dist",
    "dev:webpack": "webpack",
    "dev:chrome": "yarn dev:clean && concurrently 'yarn dev:webpack' 'wait-on dist/manifest.json && yarn dev:ext:chrome'",
    "dev:firefox": "yarn dev:clean && concurrently 'yarn dev:webpack' 'wait-on dist/manifest.json && yarn dev:ext:firefox'",
    "dev:android": "yarn dev:clean && concurrently 'yarn dev:webpack' 'wait-on dist/manifest.json && yarn dev:ext:android'",
    "dev:ext:chrome": "web-ext run -t chromium",
    "dev:ext:firefox": "web-ext run",
    "dev:ext:android": "web-ext run -t firefox-android --adb-device 2de7bd13 --firefox-apk org.mozilla.fenix",
    "lint": "eslint src --ext .js --fix",
    "package:reinstall": "rimraf node_modules && yarn",
    "package:sort": "npx sort-package-json"
  },
  "dependencies": {
    "speed-to-percentage": "^1.2.1",
    "speed-to-semitones": "^1.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@bamdadsabbagh/eslint-config": "^2.0.16",
    "@types/chrome": "^0.0.178",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.19",
    "babel-loader": "^8.2.3",
    "concurrently": "^7.0.0",
    "copy-webpack-plugin": "^10.2.4",
    "css-minimizer-webpack-plugin": "^3.4.1",
    "html-minimizer-webpack-plugin": "^3.5.0",
    "jest": "^27.5.1",
    "jest-webextension-mock": "^3.7.19",
    "node-forge": "^1.2.1",
    "rimraf": "^3.0.2",
    "terser-webpack-plugin": "^5.3.1",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5",
    "wait-on": "^6.0.1",
    "web-ext": "^6.7.0",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2"
  },
  "webExt": {
    "sourceDir": "dist",
    "artifactsDir": "packages"
  }
}
