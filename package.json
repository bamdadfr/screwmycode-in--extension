{
  "name": "screwmycode-in--extension",
  "version": "2.3.0",
  "description": "Variable speed pitch control for YouTube (Web Extension for Firefox)",
  "license": "MIT",
  "author": {
    "url": "https://bamdad.fr",
    "name": "Bamdad Sabbagh",
    "email": "hi@bamdad.fr"
  },
  "scripts": {
    "build": "yarn dev:clean && yarn build:clean && yarn build:chrome && yarn build:firefox",
    "build:clean": "rimraf packages",
    "build:increment": "build/increment.sh",
    "build:chrome": "yarn build:chrome:webpack && yarn build:chrome:package",
    "build:chrome:package": "web-ext build --source-dir dist/chrome --filename chrome.zip",
    "build:chrome:webpack": "NODE_ENV=production yarn webpack:chrome",
    "build:firefox": "yarn build:firefox:webpack && yarn build:firefox:package",
    "build:firefox:package": "web-ext build --source-dir dist/firefox --filename firefox.zip",
    "build:firefox:webpack": "NODE_ENV=production yarn webpack:firefox",
    "dev": "yarn dev:chrome",
    "dev:android": "yarn dev:clean && yarn dev:android:watch",
    "dev:android:run": "web-ext run -t firefox-android --adb-device 2de7bd13 --firefox-apk org.mozilla.fenix",
    "dev:android:watch": "concurrently 'yarn webpack:android' 'wait-on dist/android/manifest.json && yarn dev:android:run'",
    "dev:clean": "rimraf dist",
    "dev:chrome": "yarn dev:clean && yarn dev:chrome:watch",
    "dev:chrome:run": "web-ext run --source-dir dist/chrome -t chromium",
    "dev:chrome:watch": "concurrently 'yarn webpack:chrome' 'wait-on dist/chrome/manifest.json && yarn dev:chrome:run'",
    "dev:firefox": "yarn dev:clean && yarn dev:firefox:watch",
    "dev:firefox:run": "web-ext run --source-dir dist/firefox",
    "dev:firefox:watch": "concurrently 'yarn webpack:firefox' 'wait-on dist/firefox/manifest.json && yarn dev:firefox:run'",
    "lint": "eslint src --ext .js --fix",
    "package:reinstall": "rimraf node_modules && yarn",
    "package:sort": "npx sort-package-json",
    "webpack:android": "webpack",
    "webpack:chrome": "webpack --env chrome",
    "webpack:firefox": "webpack --env firefox"
  },
  "dependencies": {
    "speed-to-percentage": "^1.2.1",
    "speed-to-semitones": "^1.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@bamdadsabbagh/eslint-config": "^2.0.16",
    "@types/chrome": "^0.0.178",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.19",
    "babel-loader": "^8.2.3",
    "concurrently": "^7.0.0",
    "copy-webpack-plugin": "^10.2.4",
    "css-minimizer-webpack-plugin": "^3.4.1",
    "html-minimizer-webpack-plugin": "^3.5.0",
    "jest": "^27.5.1",
    "jest-webextension-mock": "^3.7.19",
    "node-forge": "^1.2.1",
    "rimraf": "^3.0.2",
    "terser-webpack-plugin": "^5.3.1",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.5.0",
    "typescript": "^4.6.4",
    "wait-on": "^6.0.1",
    "web-ext": "^6.7.0",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2"
  },
  "webExt": {
    "artifactsDir": "packages"
  }
}
